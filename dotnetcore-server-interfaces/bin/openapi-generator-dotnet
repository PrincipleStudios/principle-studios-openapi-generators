#!/usr/bin/env node

const {spawn} = require('child_process');
const {resolve} = require('path');

const args = process.argv.slice(2);
const cpPath = resolve(__dirname, '../build/libs/aspnetcore-server-interfaces-1.0.0.jar');
const binPath = resolve(__dirname, '../../../@openapitools/openapi-generator-cli/bin', 'openapi-generator.jar');
const JAVA_OPTS = process.env['JAVA_OPTS'] || '';

let command = `java -cp "${cpPath};${binPath}" ${JAVA_OPTS} org.openapitools.codegen.OpenAPIGenerator`;

if (args) {
    command += ` ${args.join(' ')}`;
}

const cmd = spawn(command, { stdio: 'inherit', shell: true });
cmd.on('exit', process.exit);
