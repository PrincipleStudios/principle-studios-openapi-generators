<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
	  
    <OpenApiMvcServerFullVersion Condition=" '$(OpenApiMvcServerFullVersion)' == '' and '$(VersionSuffix)' == '' ">$(OpenApiMvcServerVersion)</OpenApiMvcServerFullVersion>
    <OpenApiMvcServerFullVersion Condition=" '$(OpenApiMvcServerFullVersion)' == '' and '$(VersionSuffix)' != '' ">$(OpenApiMvcServerVersion)-$(VersionSuffix)</OpenApiMvcServerFullVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="5.0.3" />
     <PackageReference Include="PrincipleStudios.OpenApiCodegen.Server.Mvc" Version="$(OpenApiMvcServerFullVersion)"/>
  </ItemGroup>

  <ItemGroup>
    <OpenApiSchemaMvcServer Include="..\..\..\schemas\petstore.yaml" Link="Controllers\petstore.yaml" />
  </ItemGroup>
</Project>
