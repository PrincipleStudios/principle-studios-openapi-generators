<Project>

	<PropertyGroup>
		<RootNamespace>PrincipleStudios.OpenApi.CSharp</RootNamespace>
		<TargetFramework>netstandard2.0</TargetFramework>
		<VersionPrefix Condition=" '$(VersionPrefix)' == '' ">$(OpenApiMvcServerVersion)</VersionPrefix>

		<AnalyzerLanguage>cs</AnalyzerLanguage>

		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<Import Project="$(RepositoryEngineeringDir)roslyn.targets" />

	<ItemGroup>
		<None Include="*.props" Pack="true" PackagePath="build" />

		<None Remove="AnalyzerReleases.Shipped.md" />
		<None Remove="AnalyzerReleases.Unshipped.md" />
		<AdditionalFiles Include="AnalyzerReleases.Shipped.md" />
		<AdditionalFiles Include="AnalyzerReleases.Unshipped.md" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="templates\*.handlebars" />
		<EmbeddedResource Include="templates\*.handlebars" />
		<Compile Include="$(RepositoryEngineeringDir)IsExternalInit.cs" Visible="false" />
		<Compile Include="$(RepositoryEngineeringDir)MaybeNullWhenAttribute.cs" Visible="false" />
		<Compile Include="$(RepositoryEngineeringDir)NotNullWhenAttribute.cs" Visible="false" />
		<Compile Include="$(RepositoryEngineeringDir)BaseGenerator.cs" Link="Shared/BaseGenerator.cs" />
		<Compile Include="$(RepositoryEngineeringDir)AnalyzerConfigOptionsExtensions.cs" Link="Shared/AnalyzerConfigOptionsExtensions.cs" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="$(SolutionRoot)lib\PrincipleStudios.OpenApiCodegen\PrincipleStudios.OpenApiCodegen.csproj" SpecificVersion="true" />
		<ProjectReference
			Include="$(SolutionRoot)generators\dotnetcore-server-interfaces\PrincipleStudios.OpenApiCodegen.Server.Mvc.Base\PrincipleStudios.OpenApiCodegen.Server.Mvc.Base.csproj"
			SpecificVersion="true"
			AnalyzerDynamicContext="true"
			ReferenceOutputAssembly="false" />
	</ItemGroup>
</Project>
