<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>PrincipleStudios.OpenApiCodegen.Client</AssemblyName>
    <RootNamespace>PrincipleStudios.OpenApi.CSharp</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>9</LangVersion>
    <Nullable>enable</Nullable>
    <VersionPrefix Condition=" '$(VersionPrefix)' == '' ">$(OpenApiCSharpClientVersion)</VersionPrefix>

    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>

    <PackageLicenseExpression>BSD-2-Clause</PackageLicenseExpression>
    <title>Controller source generators from OpenAPI specification for .NET 5</title>
    <PackageSummary>Adds source generators to generate a C# client (via extension methods) from an OpenAPI specification file.</PackageSummary>
    <description>Adds source generators to generate a C# client (via extension methods)  from an OpenAPI specification file.</description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.0.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3" PrivateAssets="all" />

    <PackageReference Include="Handlebars.Net" Version="2.0.7" PrivateAssets="all" />
    <PackageReference Include="Microsoft.OpenApi.Readers" Version="1.2.3" PrivateAssets="all" />
    <PackageReference Include="Microsoft.OpenApi" Version="1.2.3" PrivateAssets="all" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Include="*.props" Pack="true" PackagePath="build" />
    <None Remove="AnalyzerReleases.Shipped.md" />
    <None Remove="AnalyzerReleases.Unshipped.md" />
    <AdditionalFiles Include="AnalyzerReleases.Shipped.md" />
    <AdditionalFiles Include="AnalyzerReleases.Unshipped.md" />
    <None Include="readme.md" Pack="true" PackagePath="\" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PrincipleStudios.OpenApiCodegen.Client.Base\PrincipleStudios.OpenApiCodegen.Client.Base.csproj" PrivateAssets="all" />
  </ItemGroup>

  <Target Name="AddDlls" BeforeTargets="_GetPackageFiles">
    <ItemGroup>
      <!-- Package the generator in the build directory of the nuget package -->
      <None Include="$(OutputPath)\**\*" Exclude="$(OutputPath)\**\_._;$(OutputPath)\**\*.pdb" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>

    <!-- Resolves NU5128 -->
    <Touch Files="$(OutputPath)\_._" AlwaysCreate="true" />
    <ItemGroup>
      <None Include="$(OutputPath)\_._" Pack="true" PackagePath="lib/$(TargetFramework)" Visible="false" />
    </ItemGroup>
  </Target>
</Project>
