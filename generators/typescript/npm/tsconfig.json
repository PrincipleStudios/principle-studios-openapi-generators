{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "esnext", "DOM"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "types": ["node", "jest"],
      "outDir": "./lib",
      "declaration": true
    },
    "include": [
      "src",
      "tests"
    ]
  }
