{
	"compilerOptions": {
		"target": "es5",
		"lib": ["esnext", "DOM"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"composite": true,
		"declaration": true,
		"outDir": "../../../artifacts/generators/typescript/npm/",
		"types": ["node", "jest"],
		"rootDir": ".",
		"paths": {
			"~/*": ["./*"],
			"@principlestudios/openapi-codegen-typescript": ["./src"]
		}
	},
	"references": [
		{
			"path": "./tsconfig.build.json"
		}
	]
}
