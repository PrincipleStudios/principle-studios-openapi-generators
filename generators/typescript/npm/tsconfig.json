{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "esnext", "DOM"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "types": ["node", "jest"],
      "outDir": "./lib",
      "declaration": false,
      "rootDirs": [
        "./src",
        "./tests"
      ],
      "paths": {
        "~/*": ["./*"],
        "@principlestudios/openapi-codegen-typescript": ["./src"],
      }
    }
  }
