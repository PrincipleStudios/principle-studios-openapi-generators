<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<AssemblyName>PrincipleStudios.OpenApiCodegen.TestUtils</AssemblyName>
		<RootNamespace>PrincipleStudios.OpenApiCodegen.TestUtils</RootNamespace>
		<TargetFramework>netstandard2.0</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Bogus" Version="34.0.2" />
		<PackageReference Include="FluentAssertions.Json" Version="6.1.0" />
		<PackageReference Include="JsonSchema.Net.OpenApi" Version="2.0.0" />
		<PackageReference Include="JsonSchema.Net" Version="5.1.3" />
		<PackageReference Include="JsonPointer.Net" Version="3.0.2" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="4.5.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="7.0.0" />
		<PackageReference Include="Microsoft.OpenApi.Readers" Version="1.6.3" />
		<PackageReference Include="Yaml2JsonNode" Version="1.2.4" />
		<PackageReference Include="YamlDotNet" Version="13.2.0" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="$(SolutionRoot)schemas\*.*" Exclude="$(SolutionRoot)schemas\local.*;$(SolutionRoot)schemas\.gitignore">
			<Link>schemas/%(Filename)%(Extension)</Link>
			<LogicalName>PrincipleStudios.OpenApiCodegen.TestUtils.schemas.%(Filename)%(Extension)</LogicalName>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\PrincipleStudios.OpenApi.Transformations\PrincipleStudios.OpenApi.Transformations.csproj" />
	</ItemGroup>
</Project>
